<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/reviewlistback"
    android:layout_marginTop="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:text="Name"
        android:textStyle="bold"
        android:id="@+id/reviewCustName"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <RatingBar
        android:id="@+id/reviewStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_below="@id/reviewCustName"
        android:numStars="5"
        android:rating="4" />

    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/reviewDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reviewStars"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:text="Topic of Review like Good, Very Good"
        android:textSize="20dp"
        app:trimLines="3" />


</RelativeLayout>